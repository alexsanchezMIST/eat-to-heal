{% extends "base.twig" %}

{% block content %}
	<section class="section">
		<div class="container">
			<div class="intro--wrapper">
				<div class="mb-6">
					<h1 class="hero--heading mb-4">Never miss a post!</h1>
					<p class="hero--subheading">{{ post.content }}</p>
				</div>
				{% include "partials/newsletter-form.twig" %}
			</div>
		</div>
	</section>

	<section id="grid" class="section is-gray">
		<div class="container">
			<h2 class="intro--heading mb-6">Recent posts</h2>
			<div class="grid-cols-3">
				{% for post in posts %}
					{% include "partials/card.twig" %}
				{% endfor %}
			</div>
		</div>
	</section>

	{% include 'partials/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
{% endblock %}
