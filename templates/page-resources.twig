{% extends "base.twig" %}

{% block content %}
<section id="intro" class="section">
	<div class="container">
		<div class="intro--wrapper">
			<h1 class="hero--heading mb-2">{{ post.title }}</h1>
			<p class="hero--subheading">{{ post.content }}</p>
		</div>
	</div>
</section>

<section id="post" class="section">
	<div class="container">
		<div class="grid-cols-3">
			{% for post in resources %}
				{% include "partials/card.twig" %}
			{% endfor %}
		</div>
	</div>
</section>
{% endblock %}